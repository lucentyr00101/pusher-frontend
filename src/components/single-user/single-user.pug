div
    .row(v-if="post")
        .col-xl-12 
            .card
                h5.card-header {{ post.title }}
                .card-body
                    h5.card-title ID: {{ post.id }}
                    p.card-text {{ post.body }}
    hr
    .row
        .col-xl-12.mb-3
            button.btn.btn-success(data-toggle="modal" data-target="#newCommentModal")
                i.fa.fa-plus
                |  Comment
    div(v-if="comments")
        .row
            .col-xl-12
                h4 Comments
        .row
            comment(v-for="comment in comments" :comment="comment" :key="comment.id")
    newUserModal